<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PostBook"
    android:orientation="vertical"
    android:id="@+id/frm_postBook">


    <!--    <ImageView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="150dp"-->
    <!--        android:id="@+id/img_post_cover"-->
    <!--        android:background="@color/gray"-->
    <!--        android:src="@drawable/ic_add"-->
    <!--        android:tooltipText="Thêm ảnh bìa"/>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin truyện"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/edt_name_book"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:hint="Tên truyện"
        android:inputType="text"
        android:paddingStart="4dp"
        android:textSize="18dp"
        android:layout_marginLeft="8dp"/>

    <View
        android:paddingStart="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"/>
    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/edt_genre"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:hint="Thể loại"
        android:inputType="textMultiLine"
        android:paddingStart="4dp"
        android:textSize="18dp"
        android:layout_marginLeft="8dp"/>

    <View
        android:paddingStart="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"/>
    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/edt_describe"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:hint="Mô tả truyện"
        android:inputType="textMultiLine"
        android:paddingStart="4dp"
        android:textSize="18dp"
        android:layout_marginLeft="8dp"/>

    <View
        android:paddingStart="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:text="Đăng truyện"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />
</LinearLayout>